[Unit]
Description=Tomcat Server
After=syslog.target network.target

[Service]
Type=forking
User=tomcat
Group=tomcat

Environment=JAVA_HOME=/usr/lib/jvm/jre
Environment='JAVA_OPTS=-Djava.awt.headless=true'
Environment=CATALINA_HOME=/usr/share/apache-tomcat-9.0.65
Environment=CATALINA_BASE=/usr/share/apache-tomcat-9.0.65
Environment=CATALINA_PID=/usr/share/apache-tomcat-9.0.65/temp/tomcat.pid
Environment='CATALINA_OPTS=-Xms512M -Xmx1024M'
ExecStart=/usr/share/apache-tomcat-9.0.65/bin/catalina.sh start
ExecStop=/usr/share/apache-tomcat-9.0.65/bin/catalina.sh stop

[Install]
WantedBy=multi-user.target
